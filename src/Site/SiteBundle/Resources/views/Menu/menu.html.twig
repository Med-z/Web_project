{% extends "@SiteSite/layout.html.twig" %}

{% block title %}Menu{% endblock %}

{% block pagetitle %}Bienvenue{% endblock %}

{% block testid %}
    {% if id == 0 %}
        <div>
            Cette page ne vous est pas accessible, vous êtes anonyme.
            <a href="{{ path('site_site_homepage') }}">Redirection sur l'accueil</a>
        </div>

    {% elseif id == 1 %}
        Un client connecté
        <a href="{{ path('site_site_menu', {'id': id}) }}">Menu du Site</a>

    {% elseif id == 2 %}
        administrateur
    {% endif %}
{% endblock %}